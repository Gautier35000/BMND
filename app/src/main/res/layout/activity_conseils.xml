<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@mipmap/bg_violet1_foreground"
    android:orientation="vertical"
    tools:context=".ConseilsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvFAQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="FAQ"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="1"
            android:textStyle="bold"
            android:shadowColor="@android:color/background_light"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/imageView28"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            tools:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvIntroFAQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1"
        android:textStyle="bold"
        android:shadowColor="@android:color/background_light"
        android:text="@string/introFAQ" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvConseils"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btAccueil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:backgroundTint="@android:color/background_light"
            android:backgroundTintMode="multiply"
            android:fontFamily="@font/quicksand"
            android:onClick="onBtAccueilClick"
            android:shadowColor="@android:color/background_dark"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="1"
            android:text="Accueil"
            android:textColor="@android:color/background_light"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btRéservation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="11"
            android:backgroundTint="@android:color/background_light"
            android:fontFamily="@font/quicksand"
            android:onClick="onBtReservtionClick"
            android:shadowColor="@android:color/background_dark"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="1"
            android:text="Réservation"
            android:textColor="@android:color/background_light"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btPrestation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:backgroundTint="@android:color/background_light"
            android:fontFamily="@font/quicksand"
            android:onClick="onBtPrestationClick"
            android:shadowColor="@android:color/background_dark"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="1"
            android:text="Prestation"
            android:textColor="@android:color/background_light"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btCoiffeuse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:backgroundTint="@android:color/background_light"
            android:fontFamily="@font/quicksand"
            android:onClick="onBtCoiffeuseClick"
            android:shadowColor="@android:color/background_dark"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="1"
            android:text="Coiffeuse"
            android:textColor="@android:color/background_light"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>
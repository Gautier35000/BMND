<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@mipmap/bg_violet1"
    android:orientation="vertical"
    tools:context=".ChoixCoiffeuseActivity">

    <TextView
        android:id="@+id/tvReservation2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Réservation"
        android:textSize="34sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChoixCoiffeuse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btRéservation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="11"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:drawableTint="@android:color/holo_blue_dark"
            android:fontFamily="@font/quicksand"
            android:foregroundTint="@android:color/holo_blue_dark"
            android:text="Réservation"
            android:textColor="#000000"
            android:textColorHint="#C83D3D"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btPrestation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:drawableTint="@android:color/holo_blue_dark"
            android:fontFamily="@font/quicksand"
            android:foregroundTint="@android:color/holo_blue_dark"
            android:text="Prestation"
            android:textColor="#000000"
            android:textColorHint="#C83D3D"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btCoiffeuse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:drawableTint="@android:color/holo_blue_dark"
            android:fontFamily="@font/quicksand"
            android:foregroundTint="@android:color/holo_blue_dark"
            android:text="Coiffeuse"
            android:textColor="#000000"
            android:textColorHint="#C83D3D"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btConseils"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:backgroundTintMode="multiply"
            android:drawableTint="@android:color/holo_blue_dark"
            android:fontFamily="@font/quicksand"
            android:foregroundTint="@android:color/holo_blue_dark"
            android:text="Conseils"
            android:textColor="#000000"
            android:textColorHint="#C83D3D"
            android:textSize="10sp" />

    </LinearLayout>


</LinearLayout>